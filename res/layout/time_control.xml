<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
    <Button android:layout_height="wrap_content" android:id="@+id/dateDialog_backbtn" android:layout_width="wrap_content"  android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></Button>
    <Button  android:layout_height="wrap_content" android:id="@+id/dateDialog_surebtn" android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true" ></Button>
    <DatePicker android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/datePicker_dialog" android:layout_below="@+id/dateDialog_surebtn" android:layout_centerHorizontal="true"></DatePicker>
    
</RelativeLayout>
